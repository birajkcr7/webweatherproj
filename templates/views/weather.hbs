<!DOCTYPE html>
<html lang="en">
<head>
  {{>headerLinks}}
</head>
<body>
    {{>navbar}}
   
<div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">25 MAY</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Result</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_value">0</span><sup>o</sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i> </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>  
    </div>         

    {{>footer}}

    <script src="js/main.js"></script>
    <script >

        const day= document.getElementById("day");

        const getCurrentDay = ()=>{
        let weekday= new Array(7);
        weekday[0]="Sunday";
        weekday[1]="Monday";
        weekday[2]="Tuesday";
        weekday[3]="Wednesday";
        weekday[4]="Thursday";
        weekday[5]="Friday";
        weekday[6]="Saturday";
        console.log(weekday)

        let currentDay =new Date();
        let days = weekday[currentDay.getDay()];
        day.innerText =days;

        }
        getCurrentDay();

        const today_date= document.getElementById("today_date");

        const getCurrentTime = ()=>{
          let months = ["jan","feb","mar","apr","may","jun","july",
           "jul","aug","sep","oct","nov","dec"];

          let now = new Date();
          let date = now.getDate();
          let month = months[now.getMonth()];

          today_date.innerText = `${date} ${month}`;
        }

        getCurrentTime();  

    </script>
</body>
</html>